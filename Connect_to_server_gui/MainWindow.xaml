<Window x:Class="Connect_to_server_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="孔氏族谱管理后台" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="MainGrid">
        <!-- 背景 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E3F2FD" Offset="0"/>
                <GradientStop Color="#BBDEFB" Offset="0.5"/>
                <GradientStop Color="#90CAF9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 欢迎文字 -->
        <TextBlock x:Name="WelcomeText"
                   Text="欢迎使用孔氏族谱管理后台"
                   FontSize="36"
                   FontFamily="Microsoft YaHei"
                   FontWeight="Bold"
                   Foreground="#1565C0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Opacity="0"
                   IsHitTestVisible="False">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- 连接设置面板 -->
        <StackPanel x:Name="ConnectionPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0">

            <Border Background="White" 
                    Padding="30"
                    Width="450">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="SSH服务器连接设置"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- 服务器输入 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="服务器地址:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ServerIpInput"
                                 Width="350"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Text="用户名@服务器IP"
                                 ToolTip="例如：root@192.168.1.100 或 user@example.com"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"
                                 IsEnabled="True">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="BorderBrush" Value="#BDBDBD"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#1976D2"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- 端口输入 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="SSH端口:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="PortInput"
                                 Width="100"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Text="22"
                                 ToolTip="SSH端口号，默认为22"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- 认证方式 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="认证方式:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>

                        <StackPanel>
                            <RadioButton x:Name="NoAuthRadio" 
                                       Content="无密码连接" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <RadioButton x:Name="PasswordRadio" 
                                       Content="使用密码" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,10">
                                <PasswordBox x:Name="PasswordInput" 
                                           Width="200" 
                                           Height="30"
                                           FontSize="14"
                                           Padding="5"
                                           BorderBrush="#BDBDBD"
                                           BorderThickness="1"
                                           IsEnabled="False"/>
                            </StackPanel>

                            <RadioButton x:Name="KeyRadio" 
                                       Content="使用密钥文件" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <Button x:Name="KeySelectButton" 
                                      Content="选择密钥文件..." 
                                      Width="120" 
                                      Height="30"
                                      FontSize="14"
                                      Background="#1976D2"
                                      Foreground="White"
                                      BorderThickness="0"
                                      IsEnabled="False"
                                      Margin="0,0,10,0"/>

                                <TextBlock x:Name="KeyFilePathText"
                                           Text="未选择文件"
                                           FontSize="12"
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- 连接按钮 -->
                    <Button x:Name="ConnectButton" 
                            Content="连接服务器" 
                            Width="150" 
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            IsEnabled="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#0D47A1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 文件夹选择面板（初始隐藏） -->
        <Border x:Name="FolderPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Padding="40"
                Width="700"
                Opacity="0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="选择 Familytree 文件夹"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- 服务器信息 -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <TextBlock Text="服务器信息:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               Margin="0,0,0,5"/>

                    <Border Background="#F5F5F5" 
                            Padding="15"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="ServerInfoText"
                                       FontSize="14"
                                       Foreground="#424242"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 操作系统选择 -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                    <TextBlock Text="选择服务器操作系统:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton x:Name="LinuxRadio"
                                     Content="🐧 Linux/Unix"
                                     GroupName="OS"
                                     FontSize="14"
                                     Margin="0,0,20,0"
                                     IsChecked="True"/>

                        <RadioButton x:Name="WindowsRadio"
                                     Content="🪟 Windows"
                                     GroupName="OS"
                                     FontSize="14"
                                     Margin="20,0,20,0"/>

                        <RadioButton x:Name="MacRadio"
                                     Content="🍎 macOS"
                                     GroupName="OS"
                                     FontSize="14"
                                     Margin="20,0,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- 文件夹选择方式 -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,25">
                    <TextBlock Text="选择文件夹定位方式:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               Margin="0,0,0,10"/>

                    <StackPanel>
                        <!-- 方式1：手动输入 -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                            <RadioButton x:Name="ManualInputRadio"
                                         Content="📝 手动输入文件夹路径"
                                         GroupName="SelectMethod"
                                         FontSize="14"
                                         IsChecked="True"/>

                            <StackPanel Orientation="Horizontal" Margin="25,10,0,0">
                                <TextBlock Text="文件夹路径:"
                                           FontSize="14"
                                           Foreground="#666"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>

                                <TextBox x:Name="ManualPathInput"
                                         Width="400"
                                         Height="35"
                                         FontSize="14"
                                         Padding="10,5"
                                         Text=""
                                         ToolTip="请输入完整的文件夹路径"
                                         BorderBrush="#BDBDBD"
                                         BorderThickness="1"
                                         IsEnabled="True">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="BorderBrush" Value="#BDBDBD"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="BorderBrush" Value="#1976D2"/>
                                                    <Setter Property="BorderThickness" Value="2"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- 方式2：浏览服务器目录 -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                            <RadioButton x:Name="BrowseServerRadio"
                                         Content="🔍 浏览服务器目录"
                                         GroupName="SelectMethod"
                                         FontSize="14"/>

                            <StackPanel Orientation="Horizontal" Margin="25,10,0,0">
                                <TextBox x:Name="CurrentPathInput"
                                         Width="350"
                                         Height="35"
                                         FontSize="14"
                                         Padding="10,5"
                                         Text="/"
                                         ToolTip="当前路径"
                                         BorderBrush="#BDBDBD"
                                         BorderThickness="1"
                                         IsEnabled="False"/>

                                <Button x:Name="BrowseButton"
                                        Content="浏览"
                                        Width="80"
                                        Height="35"
                                        FontSize="14"
                                        Background="#1976D2"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Margin="10,0,0,0"
                                        IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 方式3：使用建议路径 -->
                        <StackPanel Orientation="Vertical">
                            <RadioButton x:Name="SuggestedPathRadio"
                                         Content="💡 使用建议路径"
                                         GroupName="SelectMethod"
                                         FontSize="14"/>

                            <StackPanel Orientation="Vertical" Margin="25,10,0,0">
                                <TextBlock Text="根据操作系统自动生成的建议路径:"
                                           FontSize="13"
                                           Foreground="#666"
                                           Margin="0,0,0,5"/>

                                <StackPanel x:Name="SuggestedPathsPanel"
                                            Orientation="Vertical"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- 验证结果 -->
                <Border x:Name="ValidationResultBorder"
                        Background="#E8F5E9"
                        Padding="15"
                        BorderBrush="#C8E6C9"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="ValidationResultTitle"
                                   Text="✅ 路径有效"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="#2E7D32"
                                   Margin="0,0,0,5"/>

                        <TextBlock x:Name="ValidationResultText"
                                   FontSize="14"
                                   Foreground="#424242"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ValidatePathButton"
                            Content="🔍 验证路径"
                            Width="120"
                            Height="40"
                            FontSize="14"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,0,15,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#43A047"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CreateFolderButton"
                            Content="➕ 创建文件夹"
                            Width="120"
                            Height="40"
                            FontSize="14"
                            Background="#FF9800"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="15,0,15,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF9800"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="ContinueButton"
                            Content="🚀 进入族谱系统"
                            Width="150"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                        <Setter Property="Foreground" Value="#757575"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 目录浏览器窗口（模态） -->
        <Grid x:Name="DirectoryBrowserGrid"
              Background="#80000000"
              Opacity="0"
              Visibility="Collapsed">

            <Border Background="White"
                    Padding="30"
                    Width="600"
                    Height="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="10" BlurRadius="20" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="浏览服务器目录"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- 路径导航 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <Button x:Name="GoUpButton"
                                Content="⬆ 上级目录"
                                Width="100"
                                Height="30"
                                FontSize="13"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,10,0"/>

                        <TextBox x:Name="BrowserPathInput"
                                 Width="400"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- 目录列表 -->
                    <Border BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            Height="300"
                            Margin="0,0,0,20">
                        <ScrollViewer>
                            <StackPanel x:Name="BrowserDirectoryListPanel"
                                        Background="White"/>
                        </ScrollViewer>
                    </Border>

                    <!-- 操作按钮 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="SelectFolderButton"
                                Content="📁 选择此文件夹"
                                Width="120"
                                Height="40"
                                FontSize="14"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Margin="0,0,15,0"/>

                        <Button x:Name="CancelBrowseButton"
                                Content="取消"
                                Width="80"
                                Height="40"
                                FontSize="14"
                                Background="#9E9E9E"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 加载遮罩 -->
        <Grid x:Name="LoadingGrid" 
              Background="#80000000" 
              Opacity="0"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="60" Height="60"
                        BorderThickness="3" BorderBrush="#1976D2"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate" Angle="0"/>
                    </Border.RenderTransform>
                </Border>
                <TextBlock x:Name="LoadingText" 
                           Text="正在连接..."
                           FontSize="18"
                           Foreground="White"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>