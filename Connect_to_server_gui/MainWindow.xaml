<Window x:Class="Connect_to_server_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="孔氏族谱管理后台" 
        Height="500" 
        Width="850"
        WindowStartupLocation="CenterScreen">

    <Grid x:Name="MainGrid">
        <!-- 背景 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#E3F2FD" Offset="0"/>
                <GradientStop Color="#BBDEFB" Offset="0.5"/>
                <GradientStop Color="#90CAF9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 欢迎文字 -->
        <TextBlock x:Name="WelcomeText"
                   Text="欢迎使用孔氏族谱管理后台"
                   FontSize="36"
                   FontFamily="Microsoft YaHei"
                   FontWeight="Bold"
                   Foreground="#1565C0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Opacity="0"
                   IsHitTestVisible="False">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.6"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- 连接设置面板 -->
        <StackPanel x:Name="ConnectionPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Opacity="0">

            <Border Background="White" 
                    Padding="30"
                    Width="450">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="SSH服务器连接设置"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"/>

                    <!-- 服务器输入 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="服务器地址:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="ServerIpInput"
                                 Width="350"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Text="用户名@服务器IP"
                                 ToolTip="例如：root@192.168.1.100 或 user@example.com"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"
                                 IsEnabled="True">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Setter Property="BorderBrush" Value="#BDBDBD"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsFocused" Value="True">
                                            <Setter Property="BorderBrush" Value="#1976D2"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </StackPanel>

                    <!-- 端口输入 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="SSH端口:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="PortInput"
                                 Width="100"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 Text="22"
                                 ToolTip="SSH端口号，默认为22"
                                 BorderBrush="#BDBDBD"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- 认证方式 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,20">
                        <TextBlock Text="认证方式:" 
                                   FontSize="14"
                                   Foreground="#424242"
                                   Margin="0,0,0,5"/>

                        <StackPanel>
                            <RadioButton x:Name="NoAuthRadio" 
                                       Content="无密码连接" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <RadioButton x:Name="PasswordRadio" 
                                       Content="使用密码" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,10">
                                <PasswordBox x:Name="PasswordInput" 
                                           Width="200" 
                                           Height="30"
                                           FontSize="14"
                                           Padding="5"
                                           BorderBrush="#BDBDBD"
                                           BorderThickness="1"
                                           IsEnabled="False"/>
                            </StackPanel>

                            <RadioButton x:Name="KeyRadio" 
                                       Content="使用密钥文件" 
                                       GroupName="AuthType"
                                       FontSize="14"
                                       Margin="0,0,0,10"
                                       Foreground="#424242"
                                       IsEnabled="True"/>

                            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                <Button x:Name="KeySelectButton" 
                                      Content="选择密钥文件..." 
                                      Width="120" 
                                      Height="30"
                                      FontSize="14"
                                      Background="#1976D2"
                                      Foreground="White"
                                      BorderThickness="0"
                                      IsEnabled="False"
                                      Margin="0,0,10,0"/>

                                <TextBlock x:Name="KeyFilePathText"
                                           Text="未选择文件"
                                           FontSize="12"
                                           Foreground="#666"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- 连接按钮 -->
                    <Button x:Name="ConnectButton" 
                            Content="连接服务器" 
                            Width="150" 
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#1976D2"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalAlignment="Center"
                            IsEnabled="True">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1565C0"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#0D47A1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 连接结果显示 -->
        <Border x:Name="ResultPanel"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Background="White"
                Padding="20"
                Width="600"
                Opacity="0"
                Visibility="Collapsed">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" BlurRadius="15" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock x:Name="ResultTitle"
                           Text="连接结果"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#1976D2"
                           Margin="0,0,0,10"/>

                <ScrollViewer MaxHeight="200">
                    <TextBlock x:Name="ResultText"
                               FontSize="14"
                               Foreground="#424242"
                               TextWrapping="Wrap"/>
                </ScrollViewer>

                <Button x:Name="CloseResultButton"
                        Content="关闭"
                        Width="80"
                        Height="30"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Click="CloseResultButton_Click"/>
            </StackPanel>
        </Border>

        <!-- 加载遮罩 -->
        <Grid x:Name="LoadingGrid" 
              Background="#80000000" 
              Opacity="0"
              Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Width="60" Height="60"
                        BorderThickness="3" BorderBrush="#1976D2"
                        RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <RotateTransform x:Name="LoadingRotate" Angle="0"/>
                    </Border.RenderTransform>
                </Border>
                <TextBlock x:Name="LoadingText" 
                           Text="正在连接..."
                           FontSize="18"
                           Foreground="White"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>