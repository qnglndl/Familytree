<Window x:Class="WpfFadeInDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="孔氏家族管理后台" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- 原有动画 -->
                    <DoubleAnimation Storyboard.TargetName="MyText"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:0" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="MyText"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" BeginTime="0:0:0.5" Duration="0:0:1"/>

                    <!-- IP设置区动画 -->
                    <DoubleAnimation Storyboard.TargetName="IpLabel"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.5" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="IpTextBox"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.6" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="GetIpButton"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.7" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="SaveIpButton"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.8" Duration="0:0:0.5"/>

                    <!-- 按钮区动画 -->
                    <DoubleAnimation Storyboard.TargetName="StartButton"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.5" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="StopButton"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.6" Duration="0:0:0.5"/>

                    <!-- 日志区动画 -->
                    <DoubleAnimation Storyboard.TargetName="ServerLogBoxHost"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.5" Duration="0:0:0.5"/>
                    <DoubleAnimation Storyboard.TargetName="ClientLogBoxHost"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" BeginTime="0:0:1.6" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 欢迎文字 -->
        <TextBlock x:Name="MyText"
                   Text="欢迎来到孔氏家族成员管理后台程序！"
                   FontSize="24"
                   FontWeight="SemiBold"
                   TextAlignment="Center"
                   Opacity="0"
                   Margin="0,0,0,12"/>

        <!-- IP 设置区 -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="IpLabel"
                       Text="服务器地址："
                       VerticalAlignment="Center"
                       Margin="0,0,4,0"
                       Opacity="0"/>
            <TextBox x:Name="IpTextBox"
                     Grid.Column="1"
                     VerticalContentAlignment="Center"
                     ToolTip="输入裸 IP 或域名，如 192.168.1.100 或 example.com"
                     Opacity="0"
                     TextChanged="IpTextBox_TextChanged"/>
            <Button x:Name="GetIpButton"
                    Grid.Column="2"
                    Content="获取本机IP"
                    Margin="4,0"
                    Click="GetIpButton_Click"
                    Opacity="0"/>
            <Button x:Name="SaveIpButton"
                    Grid.Column="3"
                    Content="保存"
                    Click="SaveIpButton_Click"
                    Opacity="0"/>
        </Grid>

        <!-- 日志区 -->
        <Grid Grid.Row="2" Margin="0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox x:Name="ServerLogBoxHost" Header="服务端日志" Grid.Column="0" Margin="0,0,4,0" Opacity="0">
                <TextBox x:Name="ServerLogBox"
                         FontFamily="Consolas"
                         FontSize="13"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </GroupBox>

            <GroupBox x:Name="ClientLogBoxHost" Header="客户端日志" Grid.Column="1" Margin="4,0,0,0" Opacity="0">
                <TextBox x:Name="ClientLogBox"
                         FontFamily="Consolas"
                         FontSize="13"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>
            </GroupBox>
        </Grid>

        <!-- 按钮区 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button x:Name="StartButton"
                    Content="一键开服"
                    Width="120"
                    Height="40"
                    Opacity="0"
                    Click="StartButton_Click"
                    Margin="0,0,8,0"/>
            <Button x:Name="StopButton"
                    Content="一键停服"
                    Width="120"
                    Height="40"
                    Opacity="0"
                    Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>